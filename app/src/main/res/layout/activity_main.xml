<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.recycle.com.example.administrator.recycle.MainActivity"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/out_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/include_title"
                layout="@layout/item_top"
                />
            <com.example.administrator.recycle.MyRecyclerView
                android:id="@+id/recyle_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grid_top">
            </com.example.administrator.recycle.MyRecyclerView>
            <include
                android:id="@+id/include_title2"
                layout="@layout/item_top"
                />
            <com.example.administrator.recycle.MyRecyclerView
                android:id="@+id/recyle_top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grid_top">
            </com.example.administrator.recycle.MyRecyclerView>
            <include
                android:id="@+id/include_title3"
                layout="@layout/item_top"
                />
            <com.example.administrator.recycle.MyRecyclerView
                android:id="@+id/recyle_top3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grid_top">
            </com.example.administrator.recycle.MyRecyclerView>
            <include
                android:id="@+id/include_title4"
                layout="@layout/item_top"
                />
            <com.example.administrator.recycle.MyRecyclerView
                android:id="@+id/recyle_top4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grid_top">
            </com.example.administrator.recycle.MyRecyclerView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
